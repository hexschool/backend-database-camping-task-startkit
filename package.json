{
  "name": "db-migrate-startkit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init": "db-migrate up --env-file .env --config database.json -e pg -m ./migrations/init",
    "migrate": "db-migrate up --env-file .env --config database.json -e pg -m ./migrations/task",
    "create": "db-migrate create --env-file .env --config database.json -e pg -m ./migrations/task",
    "start": "docker compose --env-file .env up -d --build",
    "restart": "docker compose --env-file .env up --force-recreate --build -d",
    "stop": "docker compose --env-file .env stop",
    "clean": "docker compose --env-file .env down -v"
  },
  "dependencies": {
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2"
  },
  "author": "HexSchool",
  "license": "ISC"
}